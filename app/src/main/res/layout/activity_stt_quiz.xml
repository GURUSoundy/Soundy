<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sttBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    android:orientation="vertical"
    tools:context=".MemoActivity"
    tools:layout_editor_absoluteY="25dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#00FFFFFF"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_button" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/beige"
            android:gravity="center"
            android:text="복습 카드"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnMypage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_circle_button"
            android:elevation="4dp"
            android:padding="2dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/default_profile" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/Imgsttback"
        android:layout_width="355dp"
        android:layout_height="464dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:srcCompat="@drawable/sttback" />

    <ImageView
        android:id="@+id/iconStt2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/barr"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/stt_icon" />

    <TextView
        android:id="@+id/textMemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:text="STT(Speach To Text)"
        android:textColor="#797A7E"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/barr"
        app:layout_constraintStart_toEndOf="@+id/iconStt2" />

    <View
            android:id="@+id/barr"
            android:layout_width="330dp"
            android:layout_height="2px"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="41dp"
            android:layout_marginBottom="407dp"
            android:background="#797A7E"
            app:layout_constraintBottom_toBottomOf="@+id/Imgsttback"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sttCard"
        android:layout_width="315dp"
        android:layout_height="122dp"
        android:layout_marginBottom="160dp"
        android:background="@null"
        android:gravity="center"
        android:scrollHorizontally="true"
        android:text="STT Card"
        android:textAlignment="center"
        android:textIsSelectable="true"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/Imgsttback"
        app:layout_constraintEnd_toEndOf="@+id/Imgsttback"
        app:layout_constraintStart_toStartOf="@+id/Imgsttback"
        app:layout_constraintTop_toBottomOf="@+id/bar"
        app:layout_constraintVertical_bias="0.438" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="@color/mint"
        android:elevation="4dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="다음"
        android:textColor="#797A7E"
        android:textSize="16sp"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>